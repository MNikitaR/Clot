<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_app</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Убрать ActionBar -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">#FF8E6CEF</item>
        <!-- Цвет навигационной панели -->
        <item name="android:navigationBarColor">#FF8E6CEF</item>
        <!-- Полноэкранный режим -->
        <item name="android:windowFullscreen">true</item>
        <!-- Убрать задержку при отображении -->
        <item name="android:windowDisablePreview">false</item>
    </style>
    <style name="PurpleButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="GrayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_gray</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <!-- Базовый стиль для кнопок с цифрами -->
    <style name="PinButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">@drawable/btn_pin_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/pin_text_selector</item>
    </style>
    <!-- Cтиль для кнопок в профиле -->
    <style name="btnProfile" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/gray_profile</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>